<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <% if @blog != nil %>
      <title><%= @blog.creator.meta_title %> - <%= @blog.title %></title>
      <meta name="<%= @blog.title %>" content="<%= @blog.short_description %>">
      <meta name="keywords" content="<%= @blog.short_description %>">
      <meta name="googlebot" content="index,follow" />
      <meta name="robots" content="index,follow">

      <meta itemprop="name" content="<%= @blog.title %>">
      <meta itemprop="description" content="<%= @blog.short_description %>">
      <meta itemprop="image" content="http://gamershall.gg<%= @blog.cover.showimg %>">

      <meta property="og:title" content="<%= @blog.title %>"/>
      <meta property="og:site_name" content="<%= @blog.title %>" />
      <meta property="og:type" content="article"/>
      <meta property="og:image" content="http://gamershall.gg<%= @blog.cover.showimg %>"/>
      <meta property="og:url" content="http://gamershall.gg/post/<%= @blog.slug %>"/>
      <meta property="og:description" content="<%= @blog.short_description %>"/>
      <meta property="fb:admins" content=""/>

      <meta name="twitter:card" content="summary">
      <meta name="twitter:url" content="http://gamershall.gg/post/<%= @blog.slug %>">
      <meta name="twitter:title" content="<%= @blog.title %>">
      <meta name="twitter:description" content="<%= @blog.short_description %>">
      <meta name="twitter:image" content="http://gamershall.gg<%= @blog.cover.showimg %>">
      <% if @blog.creator.script_google != nil %>
        <script type="text/javascript">
            var _gaq = _gaq || [];
                _gaq.push(['_setAccount', 'AU-<%= @blog.creator.script_google.html_safe %>']); // <== PUT YOUR OWN CODE HERE
                _gaq.push(['_trackPageview']);
                _gaq.push(['_setDomainName', 'none']);
                _gaq.push(['_setAllowLinker', true]);
            (function() {
                  var ga = document.createElement('script'); ga.type = 'text/javascript';
                  ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                  var s = document.getElementsByTagName('script')[0];
                  s.parentNode.insertBefore(ga, s);
            })();
        </script>
      <% end %>
    <% else %>
      <% if @creator != nil %>
        <title>Gamers Hall - <%= @creator.meta_title %></title>
        <meta name="<%= @creator.meta_title %>" content="<%= @creator.meta_description %>">
        <meta name="keywords" content="<%= @creator.meta_description %>">
        <meta name="googlebot" content="index,follow" />
        <meta name="robots" content="index,follow">

        <meta itemprop="name" content="<%= @creator.meta_title %>">
        <meta itemprop="description" content="<%= @creator.meta_description %>">
        <meta itemprop="image" content="http://gamershall.gg<%= @creator.meta_photo.showimg %>">

        <meta property="og:title" content="<%= @creator.meta_title %>"/>
        <meta property="og:site_name" content="<%= @creator.meta_title %>" />
        <meta property="og:type" content="article"/>
        <meta property="og:image" content="http://gamershall.gg<%= @creator.meta_photo.showimg %>"/>
        <meta property="og:url" content="http://gamershall.gg/<%= @creator.slug %>"/>
        <meta property="og:description" content="<%= @creator.meta_description %>"/>
        <meta property="fb:admins" content=""/>

        <meta name="twitter:card" content="summary">
        <meta name="twitter:url" content="http://gamershall.gg/<%= @creator.slug %>">
        <meta name="twitter:title" content="<%= @creator.meta_title %>">
        <meta name="twitter:description" content="<%= @creator.meta_description %>">
        <meta name="twitter:image" content="http://gamershall.gg<%= @creator.meta_photo.showimg %>">
      <% else %>
        <title>Gamers Hall - A Casa do Jogador</title>
        <meta name="Gamers Hall" content="Agregador de Geradores">
        <meta name="keywords" content="Somos um agregador de geradores de conteÃºdo de games, feito de gamers para gamers. Entre no server com a gente">
        <meta name="googlebot" content="index,follow" />
        <meta name="robots" content="index,follow">
      <% end %>
    <% end %>
    <% if @creator != nil %>
      <% if @creator.script_google != nil %>
        <script type="text/javascript">
            var _gaq = _gaq || [];
                _gaq.push(['_setAccount', 'AU-<%= @creator.script_google.html_safe %>']); // <== PUT YOUR OWN CODE HERE
                _gaq.push(['_trackPageview']);
                _gaq.push(['_setDomainName', 'none']);
                _gaq.push(['_setAllowLinker', true]);
            (function() {
                  var ga = document.createElement('script'); ga.type = 'text/javascript';
                  ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                  var s = document.getElementsByTagName('script')[0];
                  s.parentNode.insertBefore(ga, s);
            })();
        </script>
      <% end %>
    <% end %>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-152402311-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-152402311-1');
    </script>
    <% if @creator != nil
         is_creator = true
       end %>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%= favicon_link_tag 'favicon.png', :rel => 'shortcut ico', :type => 'image/png' %>
		<!--CSS-->
		<link rel="stylesheet" type="text/css" href="/css/style.css" />
    </head>
  	<body>
      <div class="bg-struct text-center">
      <% if is_creator %>
        <img src="<%= @creator.cover.showimg %>" width="100%" height="480" alt="">
      <% end %>
      </div>
      <%= yield %>

<!--/Main Wrapper-->

