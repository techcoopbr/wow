<header>
  <div class="col col-lg-1">
    <a href="#"><img src=".\img\logo.svg" width="80" title="World of Warcraft" alt="World of Warcraft"></a>
  </div>
  <ul class="menu-top inline">
    <li><a href="<%= public_blog_path %>">BLOG</a></li>
    <li><a href="http://www.techcoop.com.br">CONTATO</a></li>
  </ul>
  <div class="clearfix"></div>
</header>
<div class="clearfix"></div>
<section id="main" class="row">
  <div class="container">
    <div class="box-search">
      <div class="col col-lg-1">
        <img src=".\img\iconlogo.svg" width="35" title="World of Warcraft" alt="World of Warcraft">
      </div>
      <div class="col col-lg-10">
        <input type="text" name="" value="">
      </div>
      <div class="col col-lg-1">
        <button type="button" name="button"><i class="fas fa-arrow-right"></i></button>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>

    <div class="blocks">
      <div class="block-blogs">
        <h4><i class="far fa-caret-square-down"></i> PERFIS DESTAQUES</h4>
        <ul class="carousel-blogs">
          <% @creators.each do |creator| %>
            <li>
              <a href="<%= creator.slug %>" target="_blank">
              <div class="col col-lg-12 align-self-center box">
                  <% if creator.photo_box.nil? %>
                    <img src="<%= creator.photo.medium %>" alt="<%= creator.slug %>" />
                  <% else %>
                    <img src="<%= creator.photo_box.perfil %>" alt="<%= creator.slug %>" />
                  <% end %>

              </div>
              <h6><%= creator.page_name %></h6></a>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="clearfix"></div>
      <div class="block-posts">
        <h4><i class="far fa-caret-square-down"></i> POSTS MAIS VISITADOS</h4>
        <ul class="carousel-posts">
          <% @blogs.each do |blog| %>
            <li>
              <a href="post/<%= blog.slug %>"><div class="col col-lg-12 box">
                <img src="<%= blog.cover.thumb %>" width="460" height="272" alt="">
              </div>
              <h6><%= blog.title %></h6></a>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>

  </div>
  <div class="clearfix"></div>
</section>
<div class="clearfix"></div>
<footer class="row">

  <div class="clearfix"></div>

</footer>
