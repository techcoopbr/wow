<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-12">
        <%= f.input :name, required: true, autofocus: true %>
      </div>
      <div class="col-sm-10">
        <%= f.input :page_name, required: true %>
      </div>
      <div class="col-sm-2">
        <%= f.label :page_create %>
        <%= date_field(:user, :page_create) %>
      </div>
      <div class="col-sm-12">
        <%= f.input :email, required: true %>
      </div>
      <div class="col-sm-6">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
      </div>
      <div class="col-sm-6">
        <%= f.input :password_confirmation, required: true %>
      </div>
      <div class="col-sm-12">
        <%= f.input :photo, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.label :about %>
        <%= f.text_area :about, required: true, rows: "15", class: 'form-control' %>
      </div>
      <br>
      <div class="col-sm-12">
        <%= f.input :facebook, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitter, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitch, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :website, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :podcast, required: false %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Salvar", class: 'btn btn-primary'  %>
  </div>
<% end %>

<%= render "users/shared/links" %>
