<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
  </div>
  <div class="col-lg-4 col-lg-offset-4 well" style="margin-top:120px;">
    <div class="text-center">
      <img class="img-fluid" alt="Responsive image" src="/logo.png">
    </div>
    <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <div class="text-center"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "ACESSAR PAINEL", class: 'btn btn-lg btn-success btn-block' %>
        </div>
      <% end %>
      <div class="remmember text-center">
      <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
