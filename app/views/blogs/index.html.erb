<%- model_class = Blog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <%= link_to t('.new', :default => t("NOVO ARTIGO")),
              new_blog_path, :class => 'btn btn-success btn-xs' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1">ID</th>
      <th class="col-md-5">Title</th>
      <th class="col-md-2">Data</th>
      <th class="col-md-1">Publicado</th>
      <th class="col-md-3"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.id, blog_path(blog) %></td>
        <td><%= blog.title %></td>
        <td><%=l blog.created_at %></td>
        <td><%= blog.creator_published %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      blog_path(blog), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_blog_path(blog), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      blog_path(blog),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
