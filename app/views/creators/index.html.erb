<%- model_class = Creator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th data-data="user">ID Pedido</th>
      <th data-data="user">Usu√°rio</th>
      <th data-data="approved">Aprovado</th>
      <th data-data="about">Data</th>
      <th data-data="about">About</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @creators.each do |creator| %>
      <tr>
        <td><%= link_to creator.id, creator_path(creator) %></td>
        <td><%= creator.user.name %></td>
        <td><%= creator.approved %></td>
        <td><%=l creator.created_at %></td>
        <td><%= creator.about %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      creator_path(creator), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_creator_path(creator), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      creator_path(creator),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_creator_path,
            :class => 'btn btn-primary' %>
