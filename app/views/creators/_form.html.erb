<%= simple_form_for(@creator) do |f| %>
<h4 class="text-center">Perfil de criador</h4>
<div class="container">
<%= f.error_notification %>
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Sobre Mim</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-image-tab" data-toggle="pill" href="#pills-image" role="tab" aria-controls="pills-image" aria-selected="false">Imagem e Arquivos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-social-tab" data-toggle="pill" href="#pills-social" role="tab" aria-controls="pills-social" aria-selected="false">Redes Sociais</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-embed-tab" data-toggle="pill" href="#pills-embed" role="tab" aria-controls="pills-embed" aria-selected="false">Plugins Sociais</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contato</a>
    </li>

    <% if current_user.admin? %>
      <li class="nav-item">
        <a class="nav-link" id="pills-admin-tab" data-toggle="pill" href="#pills-admin" role="tab" aria-controls="pills-admin" aria-selected="false">Liberação</a>
      </li>
    <% end %>
  </ul>

  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="form-inputs">
        <div class="row">
          <div class="col-md-10">
            <%= f.input :page_name, required: true %>
          </div>
          <div class="col-md-2">
            <%= f.label :page_create %>
            <%= date_field(:create, :page_create) %>
          </div>
        </div>
      </div>
      <div class="form-inputs">
        <div class="row">
      <div class="col-md-12">
        <%= f.label 'Descrição curta do seu perfil (ex: Animador / Cartunista / Gamer)' %>
        <%= f.input :short_description, label: false %>
      </div>
      <div class="col-md-12">
        <%= f.input :slug %>
      </div>
      <div class="col-md-12">
        <%= f.label 'Resumo sobre você' %>
        <%= f.input :about, label: false %>
      </div>
      <div class="col-md-12">
        <%= f.label 'Seu endereço de correspondencia (*dado público)' %>
        <%= f.input :contact_address, label: false %>
      </div>
      <div class="col-md-12">
        <%= f.label 'Seu endereço de email para fãs (*dado público)' %>
        <%= f.input :contact_email, label: false %>
      </div>
      <div class="col-md-12">
        <%= f.label 'Seu telefone para fãs (*dado público)' %>
        <%= f.input :contact_phone, label: false %>
      </div>
    </div>
  </div>
  </div>


    <div class="tab-pane fade" id="pills-image" role="tabpanel" aria-labelledby="pills-image-tab">
      <div class="col-sm-12 text-center">
        <p>Os tamanhos são sugestões de como utilizar</p>
      </div>
      <div class="col-md-6">
        <%= f.label 'Foto Perfil (230 x 230)' %>
        <%= f.file_field :photo, class: 'form-control'%>
      </div>
      <br>
      <div class="col-md-6">
        <%= f.label 'Foto Capa (1920x600)' %>
        <%= f.file_field :cover, class: 'form-control'%>
      </div>
      <br>
      <div class="col-md-6">
        <%= f.label 'Curriculo, PDF, Trabalhos' %>
        <%= f.file_field :contact_file, class: 'form-control'%>
      </div>
      <br>
      <div class="col-md-6">
        <%= f.label 'Logo / Arte da page' %>
        <%= f.file_field :publi_file, class: 'form-control'%>
      </div>
      <br>
    </div>

    <div class="tab-pane fade" id="pills-social" role="tabpanel" aria-labelledby="pills-social-tab">
      <div class="col-sm-12 text-center">
        <p>URLs devem conter http:// ou https:// na frente, para garantir copie do seu navegador</p>
      </div>
      <div class="col-sm-12">
        <%= f.input :facebook, required: false, type: 'url' %>
      </div>
      <div class="col-sm-12">
        <%= f.input :youtube, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :instagram, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitter, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitch, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :website, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :podcast, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :linkdin, required: false %>
      </div>
    </div>


    <div class="tab-pane fade" id="pills-embed" role="tabpanel" aria-labelledby="pills-embed-tab">
      <% if current_user.admin? || current_user.creator? %>
      <div class="col-md-12">
        <%= f.input :stream_embed %>
      </div>
      <div class="col-md-12">
        <%= f.input :facebook_embed %>
      </div>
      <div class="col-md-12">
        <%= f.input :youtube_embed %>
      </div>
      <div class="col-md-12">
        <%= f.input :twitter_embed %>
      </div>
      <div class="col-md-12">
        <%= f.input :instagram_embed %>
      </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
    <% if current_user.admin? %>
    <div class="tab-pane fade" id="pills-admin" role="tabpanel" aria-labelledby="pills-admin-tab">
      <div class="col-md-12">
        <%= f.association :user %>
      </div>
      <div class="col-md-12">
        <%= f.input :approved %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
