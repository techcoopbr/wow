<%= simple_form_for(@creator) do |f| %>
  <div class="card-header">Perfil de criador - Redes Sociais</div>
<div class="card-body">
<%= f.error_notification %>
    <div class="row">
      <div class="col-sm-12 text-center">
        <p>URLs devem conter http:// ou https:// na frente, para garantir copie do seu navegador</p>
      </div>
      <div class="col-sm-12">
        <%= f.input :facebook, required: false, type: 'url' %>
      </div>
      <div class="col-sm-12">
        <%= f.input :youtube, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :instagram, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitter, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :twitch, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :website, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :podcast, required: false %>
      </div>
      <div class="col-sm-12">
        <%= f.input :linkdin, required: false %>
      </div>
    </div>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
