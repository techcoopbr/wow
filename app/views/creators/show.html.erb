<div class="container">
  <div class="row">
    <div class="col-md-12">
      Usu√°rio: <strong><%= @creator.user.name %></strong>
    </div>
    <div class="col-md-12">
      Aprovado: <strong><%= @creator.approved %></strong>
    </div>
    <div class="col-md-12">
      URL Perfil: <a href="http://www.gamershall.gg/<%= @creator.slug %>" target="_blank"><strong>www.gamershall.gg/<%= @creator.slug %></strong></a>
